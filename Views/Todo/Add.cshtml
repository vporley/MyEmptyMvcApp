@model MyEmptyMvcApp.Models.TodoItem

<h2>Add Todo</h2>

<form asp-action="Add" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-asp-validation-for="Title"></span>
    </div>

    <div>
        <label asp-for="IsComplete"></label>
        <input asp-for="IsComplete" type="checkbox" />
    </div>

    <button type="submit">Add</button>
</form>