@model MyEmptyMvcApp.Models.TaskListViewModel

<h2>Todo List</h2>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="NewItem.Title"></label>
        <input asp-for="NewItem.Title" required />
    </div>
    <div>
        <label asp-for="NewItem.IsComplete"></label>
        <input asp-for="NewItem.IsComplete" type="checkbox" />
    </div>
    <button type="submit">Add</button>
</form>

<hr />

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Completed</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tasks)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.IsComplete</td>
            </tr>
        }
    </tbody>
</table>
